extends ../layout/layout.jade

block content
  div.container
    form(id="reg", method="post", action="/user/forget")
      div.app-section
        input.app-input(placeholder="手机号")
      div.app-section
        input.app-input(placeholder="请输入新密码" type="password")
        input.app-input(placeholder="请再一次输入密码" type="password")
      div.app-section
        input.app-input(placeholder="请输入收到的验证码")
        button.app-button.dark-blue 发送验证码
      div.app-section
        button.app-button.green 确定

block scriptBlock
  script.
    $(function () {
      var fileds = [{
        name: "username",
        display: "手机号",
        rules: "required"
      },{
        name: "password",
        display: "密码",
        rules: "required"
      }];
      var validator = new FormValidator("login", fileds, function(errors, event) {
        if(errors && errors.length > 0) {
          $.toast(errors[0].message);
        }
      });
      validator.setMessage("required", "请输入%s!");
    })   