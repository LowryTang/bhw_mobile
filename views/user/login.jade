extends ../layout/layout.jade

block content
  div.contrainer
    form(id="reg", method="post", action="/users/login")
      div.app-section
        input.app-input(name="username", placeholder="手机号")
        input.app-input(name="password", placeholder="密码" type="password")
      div.app-section
        button.app-button.green(type="submit") 登录
        a.app-button.dark-blue(href="/users/forget") 忘记密码