extends ../layout/layout.jade

block content
  div.container
    div.user-info
      div.user-image
        img(src=user.headIco) 
      div.user-detail
        div.user-name
          用户名: 
          span= user.username
        
    div.app-section
      a.list-item(href="/user/orders")
        div
          span 我的订单
          i
      a.list-item(href="/user/addresses")
        div
          span 我的地址
          i
    div.app-section
      button.app-button.dark-blue#logout 退出登录

block scriptBlock
  script.
    $("#logout").click(function() {
      $.dialog(null, function() {
        location.href = "/user/logout";
      });
    });

