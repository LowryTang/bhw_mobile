extends ../layout/layout.jade

block content
  div.container
    - for (var i = 0; i < products.length; i ++)
      - item = products[i];
      div.product-section
        a(href='product/#{item.id}')
          div.product-item
            img(src=imgPrefix+item.img, alt="")
            div.product-detail
              div.product-name= item.name
              div 
                span.product-price= item.sellPrice
                span.product-purchase.btn 立即购买

block scriptBlock
  script.
    $(".product-purchase").click(function(event) {
      console.log("add to cart");
      return false;
    })