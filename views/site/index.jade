extends ../layout/layout.jade

block content
  div.container
    - for (var i = 0; i < products.length; i ++)
      - item = products[i];
      div.product-section
        a(href='products/'+item.id)
          div.product-item
            img(src='http://bhw_pc/'+item.img, alt="")
            div.product-detail
              div.product-name= item.name
              div 
                span.product-price= item.sellPrice
